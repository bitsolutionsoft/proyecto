<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondogusto"
    android:orientation="vertical"
    tools:context=".Gustos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#20050505"
        >

        <TextView
            android:id="@+id/txtArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Gustos"
            android:textColor="#fff"
            android:textSize="24sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/txtPregunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="Elige una imagen que mas le gusta"
            android:textColor="#fff"
            android:textSize="28dp" />
        <LinearLayout
            android:id="@+id/primero"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >

        <ImageView
            android:id="@+id/respuesta1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="10dp"
            android:onClick="respuesta"
            android:text="A: una hora"
            android:src="@drawable/electricidad"
            android:background="@drawable/border"
            android:textSize="18sp" />

            <ImageView
                android:id="@+id/respuesta2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:onClick="respuesta"
                android:padding="10dp"
                android:background="@drawable/border"
                android:src="@drawable/electricidad2"
                android:text="B: un carro"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            >

        <ImageView
            android:id="@+id/respuesta3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:onClick="respuesta"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:padding="10dp"
            android:src="@drawable/cocina"
            android:gravity="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/respuesta4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/border"
            android:layout_marginLeft="20dp"
            android:onClick="respuesta"
            android:padding="10dp"
            android:src="@drawable/cocina2"
            android:gravity="center"
            android:text="D: no lo se"
            android:textSize="18sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/respuesta5"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:onClick="respuesta"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:gravity="center"
            android:background="@drawable/boton_round"
            android:text="Saltar"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>